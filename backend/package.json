{
  "name": "marelle-ecommerce",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run web:dev",
    "dev:admin": "cd apps/web && vite --mode admin",
    "build": "cd apps/web && vite build",
    "build:admin": "cd apps/web && vite build --mode admin",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "cd apps/web && vite preview",
    "preview:admin": "cd apps/web && vite preview --mode admin",
    "web:dev": "cd apps/web && vite",
    "workers:dev": "wrangler dev --config wrangler.toml",
    "workers:deploy": "wrangler deploy --config wrangler.toml",
  "db:studio": "drizzle-kit studio",
  "db:studio:d1": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/drizzleStudioLocalD1.ps1",
  "dev:all": "concurrently -n workers,web -c blueBright,greenBright \"npm:workers:dev\" \"npm:web:dev\"",
  "dev:all:studio": "concurrently -n workers,web,studio -c blueBright,greenBright,magentaBright \"npm:workers:dev\" \"npm:web:dev\" \"npm:db:studio:d1\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:setup": "echo \"[skipped] legacy script removed\"",
    "db:seed": "echo \"[skipped] legacy script removed\"",
    "logistics:status": "node scripts/generateLogisticsStatus.js",
    "logistics:history": "node scripts/generateLogisticsHistory.js"
  },
  "dependencies": {
    "@ant-design/charts": "^2.6.5",
    "@ant-design/plots": "^2.6.5",
    "@cloudflare/workers-types": "^4.20231025.0",
    "@heroicons/react": "^2.0.18",
    "@hono/zod-openapi": "^1.1.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "framer-motion": "^10.16.14",
    "gsap": "^3.12.2",
    "hono": "^4.0.0",
    "iconv-lite": "^0.6.3",
    "lucide-react": "^0.544.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.20.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.6",
    "vite": "^4.5.0"
  }
}
